<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "./mybatis-3-mapper.dtd" >
<mapper namespace="kr.dream.swell.dao.DreamCategoryDAO">
	<!-- 1. 카테고리 목록 보여주기 -->
	<select id="selectCategory" resultType="string">
		select categoryName from dreamSwellComment
	</select>
	<!-- 2. categoryNum => categoryName -->
	<select id="selectCategoryBycategoryNum" parameterType="int" resultType="string">
		select categoryName from dreamSwellComment where idx = #{categoryNum}
	</select>
</mapper>